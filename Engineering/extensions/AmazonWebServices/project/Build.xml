<xml>
	
	<include name="${HXCPP}/build-tool/BuildCommon.xml"/>
	
	<files id="common">
		
		<compilerflag value="-Iinclude"/>
		
		<file name="common/ExternalInterface.cpp" if="android" />
		<file name="common/AmazonWebServices.cpp" if="android" />
		
	</files>

	<files id="iphone">
		<compilerflag value="-Fios/frameworks"/>
		<compilerflag value="-Iinclude"/>
		
		<file name="ios/ExternalInterface.mm"/>
		<file name="ios/AmazonWebServices.mm"/>
		<file name="ios/DBTeacher.mm"/>
		<file name="ios/DBStudent.mm"/>
	</files>
	
	<set name="SLIBEXT" value=".lib" if="windows"/>
	<set name="SLIBEXT" value=".a" unless="windows"/>
	<set name="SLIBEXT" value=".so" if="webos"/>
	
	<set name="DEBUGEXTRA" value="-debug" if="fulldebug" />
	
	<target id="NDLL" output="${LIBPREFIX}amazonwebservices${MSVC_LIB_VERSION}${DEBUGEXTRA}${LIBEXTRA}" tool="linker" toolid="${STD_MODULE_LINK}">
		
		<outdir name="../ndll/${BINDIR}"/>
		<ext value=".ndll" if="windows || mac || linux"/>
		<files id="common"/>

		<files id="iphone" if="iphone"/>
		
	</target>
	
	<target id="default">
		
		<target id="NDLL"/>
		
	</target>
	
</xml>