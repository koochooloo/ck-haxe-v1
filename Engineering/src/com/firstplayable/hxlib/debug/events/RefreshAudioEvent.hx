/**
 * An event sent when Audio parameters have changed, and interested objects
 * should update themselves accordingly. 
 */
class RefreshAudioEvent extends Event
{
	public static inline var REFRESH_AUDIO_EVENT:String = "REFRESH AUDIO";
	
	/**
	 * Construct
	 */
	public function new()
	{
		super(REFRESH_AUDIO_EVENT);
	}
	
}
